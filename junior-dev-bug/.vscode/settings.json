{
	"cSpell.words": [
		"apos",
		"Filmcutt",
		"lucide",
		"Mahmud",
		"Rijvi",
		"supabase",
		"Swiper",
		"ticketbody",
		"ticketid"
	],
	// START: Settings for Eslint and Prettier
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"[javascript]": {
		"editor.formatOnSave": true
	},
	"[javascriptreact]": {
		"editor.formatOnSave": true
	},
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.organizeImports": "always"
	},
	"eslint.alwaysShowStatus": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],

	// START: Settings for Prettier
	"prettier.useTabs": true,
	"prettier.jsxSingleQuote": false,
	"prettier.tabWidth": 2,
	"prettier.arrowParens": "avoid",
	"prettier.singleQuote": true,
	"workbench.colorTheme": "Learn with Sumit - Peace of the eye - Dracula version",
	"editor.fontFamily": "'Fira Code iScript', Consolas, 'Courier New', monospace",
	"editor.fontLigatures": true,
	"workbench.colorCustomizations": {},
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": ["variable.parameter"],
				"settings": {
					"fontStyle": "italic"
				}
			}
		]
	}
}
